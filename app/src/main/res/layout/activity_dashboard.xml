<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <Button
        android:id="@+id/sensor"
        android:layout_width="245dp"
        android:layout_height="93dp"
        android:backgroundTint="#EAE7E7"
        android:drawableBottom="@drawable/ic_baseline_sensors_24"
        android:shadowColor="#000000"
        android:text="on"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold|normal"
        app:iconTint="#ED1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FF5722" />

    <Button
        android:id="@+id/rsensor"
        android:layout_width="248dp"
        android:layout_height="89dp"
        android:autoSizeMaxTextSize="20dp"
        android:backgroundTint="#EAE7E7"
        android:drawableBottom="@drawable/ic_baseline_sensors_off_24"
        android:shadowColor="#000000"
        android:text="Off "
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold|normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76"
        app:strokeColor="#FF5722" />

    <TextView
        android:id="@+id/display"
        android:layout_width="272dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:background="#FFFFFF"
        android:backgroundTint="#F3F3F3"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text=""
        android:textAlignment="center"
        android:textColor="#C80202"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.626"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <ImageButton
        android:id="@+id/siren"
        android:layout_width="74dp"
        android:layout_height="72dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.273"
        app:srcCompat="@drawable/img_20210428_143119"
        android:backgroundTint="#FFFFFF"
        android:shadowColor="#000000"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@drawable/global_network__1_" />


</androidx.constraintlayout.widget.ConstraintLayout>